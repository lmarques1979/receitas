<html lang="en">
<head>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
<meta name="description" content="" />
<meta name="author" content="" />
<link rel="icon" href="../../favicon.ico" />

<title th:text="#{tiporeceita}"></title>

<!-- CSS do projeto -->
<link th:href="@{/libs/bootstrap/bootstrap.min.css}" rel="stylesheet" />
<link th:href="@{/css/main.css}" rel="stylesheet" />
<link th:href="@{/css/mobile.css}" rel="stylesheet" />

<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
      <script src="/libs/html5shiv/html5shiv.min.js"></script>
      <script src="/libs/respond/respond.min.js"></script>
    <![endif]-->
</head>

<body>

	<div class="container">
	
		<!--<div th:include="/fragments/logo :: logocontent"></div>-->
		
		<!-- navbar -->
		<div th:include="/fragments/nav :: navbarcontent"></div>
		
		<div class="content">
				
				<text th:if="${message}">
					<div th:text="${message}" class="message" role="status"></div>
				</text>
				
				<table>
					<thead>
							<tr>
								<th colspan="2" class="model"><text for="tiporeceita" th:text="#{tiporeceita}"></text></th>
							</tr>
							<tr>
								<th><text for="editar" th:text="#{editar}"></text></th>
								<th><text for="tiporeceita" th:text="#{tiporeceita}"></text></th>
							</tr>
						</thead>
						<tbody>
						
							<tr th:each="tiporeceita : ${pageimpl}">
								<td class="centro menor"><a th:title="#{editar}" th:href="@{/showtiporeceita/{id}(id= ${tiporeceita.id})}"><img th:src="@{/images/edit.png}"/></a></td>
								<td colspan="2"><a th:title="#{editar}" th:href="@{/showtiporeceita/{id}(id= ${tiporeceita.id})}"><text for="home" th:text="${tiporeceita.descricao}"></text></a></td>
							</tr>
							
							<tr>
								<td colspan="2"><a class="criar" th:href="@{/tiporeceita}"><text for="tiporeceita" th:text="#{criartiporeceita}"></text></a></td>
							</tr>
													
						</tbody>
				</table>
		</div>
		
		<div th:if="${pageimpl.getTotalPages()} > 1">
			<!-- pagination -->
			<div th:include="/fragments/pagination :: paginationcontent"></div>
		</div>
		<!-- footer -->
		<div th:include="/fragments/footer :: footercontent"></div>
	
	</div>
	<!-- /.container -->
	
</body>
</html>